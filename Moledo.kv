#: kivy 2.1.0
#: import transition kivy.uix.screenmanager.NoTransition
#: import Clock kivy.clock.Clock

MyScreenManager:
    transition: transition()

    MainScreen:
    RecipeScreen:

<CenterLayout>:
    anchor_x: 'center'
    anchor_y: 'center'

<MainScreen>:
    name: 'Main'

    BoxLayout:
        orientation: 'vertical'

        canvas:

            Color:
                rgba: 0.9 , 0.466 , 0.125 , 1

            Rectangle:
                pos: 0 , root.top-root.top/8
                size: root.width , root.top/8

            Color:
                rgba: 1 , 0.96 , 0.698 , 1

            Rectangle:
                size: root.width , root.top/8*7

        Label:
            size_hint: 1 , 1
            text: 'Moledo'
            color: 0.1 , 0.1 , 0.1 , 1
            font_size: root.top/10
            pos: 0 , root.top

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 7

            CenterLayout:
                Button:
                    text: 'Retseptid'
                    font_size: 30
                    background_color: 0.518 , 0.55 , 0.555 , 1
                    on_release: app.root.current = 'Recipe'
                    size_hint: 0.4 , 0.5

            CenterLayout:
                Button:
                    text: 'Eine Sobivus'
                    font_size: 30
                    background_color: 0.518 , 0.55 , 0.555 , 1
                    on_release: #app.root.current = 'Recipe'
                    size_hint: 0.4 , 0.5

            CenterLayout:
                Button:
                    text: 'Allergia Hoiatused'
                    font_size: 30
                    background_color: 0.518 , 0.55 , 0.555 , 1
                    on_release: #app.root.current = 'Recipe'
                    size_hint: 0.4 , 0.5

<RecipeScreen>:
    name: 'Recipe'

    BoxLayout:
        orientation: 'vertical'

        canvas:

            Color:
                rgba: 0.9 , 0.466 , 0.125 , 1

            Rectangle:
                pos: 0 , root.top-root.top/8
                size: root.width , root.top/8

            Color:
                rgba: 1 , 0.96 , 0.698 , 1

            Rectangle:
                size: root.width , root.top/8*7

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            Label:
                text: 'Retseptid'
                color: 0.1 , 0.1 , 0.1 , 1
                font_size: root.height/10
                #pos: 0 , root.top

            Button:
                size_hint: self.texture_size[0]/root.width , 1
                text: 'Tagasi'
                background_color: 0.518 , 0.55 , 0.555 , 1
                font_size: 30
                on_release: app.root.current = 'Main'

        BoxLayout:
            orientation:'vertical'
            size_hint_y: 7

            RecipeScrollView:
                do_scroll_x: False
                do_scroll_y: True
                #size_hint_y: 7

                RecipeList:
                    cols: 1
                    rows: self.list_size
                    #size_y: 50*self.list_size
                    size_hint_y: 10
